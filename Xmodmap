! help with command: xev
! Swap caps lock and escape
remove  Lock      = Caps_Lock
keysym  Escape    = Caps_Lock
keysym  Caps_Lock = Escape
add     Lock      = Caps_Lock
! Swap control and escape

!       escape
!keycode 9         = Caps_Lock
!       alt_gr
! keycode 108       = Alt_L
!       control_l
!keycode 37        = Escape
!       capslock
!keycode 66        = Control_L
! keycode 134       = Alt_L Meta_L
!       control_r
!keycode 105       = Control_L
!       Menu 
keycode 135       = Super_R
!
!add     control   = Control_L Control_R
!add     mod1      = Alt_L Alt_R Meta_L Meta_R
!add     mod4      = Super_L Super_R Menu
!add     lock      = Caps_Lock
